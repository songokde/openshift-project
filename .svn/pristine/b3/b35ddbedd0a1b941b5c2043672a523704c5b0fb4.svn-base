function showChartWeb(data){
	var myChart = echarts.init(document.getElementById('webLineChart'));
	option = {
		tooltip: {
	        trigger: 'axis',
	    },
		xAxis: {
			show : false,
	        type: 'category',
	        data: data["time"]
	    },
	    yAxis: {
	    	show : false,
	        type: 'value'
	    },
	    series: [{
	    	name:'web攻击',
            type:'line',
	        data: data["value"],
	        type: 'line'
	    }]
			   
	};
    myChart.setOption(option);
   
}

